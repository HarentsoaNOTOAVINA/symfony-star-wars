{% extends 'base.html.twig' %}
{% set Pagecout ="" %}
{% block title %}List des planettes{% endblock %}


{% block body %}

    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('app_index') }}" class="breadcrumb-link">Tableau de bord</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Liste des planettes</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="planets_table" class="table table-hover">
                            <thead class="bg-light">
                            <tr class="border-0">
                                <th>Nom</th>
                                <th>Rotation</th>
                                <th>Orbite</th>
                                <th>Diametre</th>
                                <th>Climat</th>
                                <th>Gravite</th>
                                <th>Terrain</th>
                                <th>Surface d'eau</th>
                                <th>Population</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for planet in planets %}
                                <tr>
                                    <td> {{ planet.name }}</td>
                                    <td>{{ planet.rotation_period }}</td>
                                    <td>{{ planet.orbital_period }}</td>
                                    <td>{{ planet.diameter }}</td>
                                    <td>{{ planet.climate }}</td>
                                    <td>{{ planet.gravity }}</td>
                                    <td>{{ planet.terrain }}</td>
                                    <td>{{ planet.surface_water }}</td>
                                    <td>{{ planet.population }}</td>
                                    <td>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    {{ include('block/blockjs.datatable.html.twig', { 'table_id': 'planets_table', 'targets': 5 }) }}

{% endblock %}